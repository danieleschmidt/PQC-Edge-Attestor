# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_size = 2

[*.{c,h,cpp,hpp}]
indent_size = 4

[*.{py}]
indent_size = 4
max_line_length = 88

[*.{md,txt}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,bash}]
indent_size = 2

[*.{dockerfile,Dockerfile*}]
indent_size = 2

[*.{sql}]
indent_size = 2

[*.{xml,html,htm}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2
