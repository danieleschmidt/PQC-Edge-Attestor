# PQC-Edge-Attestor Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
ENABLE_SWAGGER=false

# Security Configuration
JWT_SECRET=your_jwt_secret_here_use_openssl_rand_base64_64
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://pqc_user:your_password@postgres:5432/pqc_attestor
POSTGRES_DB=pqc_attestor
POSTGRES_USER=pqc_user
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password

# Quantum HSM Configuration
QUANTUM_HSM_URL=http://quantum-hsm-simulator:8080
QUANTUM_HSM_API_KEY=your_hsm_api_key

# Monitoring & Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#pqc-alerts
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_SERVICE_KEY=your_pagerduty_service_key

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL_FROM=pqc-alerts@yourdomain.com
ALERT_EMAIL_TO=ops@yourdomain.com

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/server.crt
SSL_KEY_PATH=/app/certs/server.key
SSL_CA_PATH=/app/certs/ca.crt

# Performance Tuning
MAX_WORKERS=auto
CACHE_TTL=300
COMPRESSION_THRESHOLD=1024
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=latest
HEALTH_CHECK_INTERVAL=30
GRACEFUL_SHUTDOWN_TIMEOUT=30